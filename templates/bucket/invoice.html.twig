<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: DejaVu Sans, sans-serif; font-size: 12px; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background: #f2f2f2; }
        h1 { color: #2c3e50; }
    </style>
</head>
<body>
    <h1>Invoice - Order #{{ commande.numeroCommande }}</h1>
    <p>Date: {{ commande.createdAt|date('d/m/Y H:i') }}</p>
    <p>Client: {{ commande.client.name }} ({{ commande.client.email }})</p>
    <p>Adresse: {{ commande.adressLivraison }}</p>

    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% set grandTotal = 0 %}
            {% for ligne in commande.orderLines %}
                <tr>
                    <td>{{ ligne.product.name }}</td>
                    <td>{{ ligne.product.price }} TND</td>
                    <td>{{ ligne.quantity }}</td>
                    <td>{{ ligne.product.price * ligne.quantity }} TND</td>
                </tr>
                {% set grandTotal = grandTotal + (ligne.product.price * ligne.quantity) %}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Shipping</strong></td>
                <td>7.00 TND</td>
            </tr>
            <tr>
                <td colspan="3"><strong>Grand Total</strong></td>
                <td><strong>{{ grandTotal + 7 }} TND</strong></td>
            </tr>
        </tfoot>
    </table>
</body>
</html>
