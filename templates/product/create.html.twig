{% extends 'base.html.twig' %}
{% block title %}Create Product{% endblock %}
{% block page_title %}Create Product{% endblock %}
{% block body %}
<div class="content-area">
    <div class="modern-form">
        <div class="form-header">
            <h2><i class="bi bi-plus-square"></i> Create New Product</h2>
            <p>Add a new product to your inventory with detailed information and stock allocation</p>
        </div>

        {{ form_start(form) }}
        
        <div class="form-section">
            <div class="form-section-title">
                <i class="bi bi-info-circle"></i>
                Basic Information
            </div>
            
            <div class="form-row two-columns">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                </div>
            </div>
            
            <div class="form-row two-columns">
                <div class="form-group">
                    {{ form_label(form.price) }}
                    <div style="position: relative;">
                        {{ form_widget(form.price, {'attr': {'style': 'padding-left: 3rem;'}}) }}
                        <span style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--text-secondary); font-size: 0.9rem;">TND</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.image) }}
                    <div class="file-upload-area">
                        <div class="file-upload-icon">
                            <i class="bi bi-cloud-upload"></i>
                        </div>
                        <div class="file-upload-text">
                            {{ form_widget(form.image) }}
                            <p>Click to upload product image</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <div class="form-section-title">
                <i class="bi bi-shop"></i>
                Store Stock Allocation
            </div>
            
            <div class="form-row">
                {% for stockForm in form.stock_data %}
                <div class="form-group" style="background: var(--bg-secondary); padding: 1.5rem; border-radius: 8px; border: 1px solid var(--border);">
                    <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
                        {{ form_widget(stockForm.selected, {'attr': {'style': 'margin: 0;'}}) }}
                        <label style="margin: 0; font-weight: 600; color: var(--text-primary);">
                            {{ stockForm.store.vars.data.name }}
                        </label>
                        {{ form_widget(stockForm.store) }}
                    </div>
                    <div class="form-group" style="margin: 0;">
                        {{ form_label(stockForm.quantity) }}
                        {{ form_widget(stockForm.quantity) }}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            <a href="{{ path('owner.product.home') }}" class="btn-secondary">
                <i class="bi bi-arrow-left"></i>Cancel
            </a>
            <button type="submit" class="btn-primary">
                <i class="bi bi-plus-circle"></i>Create Product
            </button>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}