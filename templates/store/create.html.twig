{% extends 'base.html.twig' %}
{% block title %}Create Store{% endblock %}
{% block page_title %}Create Store{% endblock %}
{% block body %}
<div class="content-area">
    <div class="modern-form">
        <div class="form-header">
            <h2><i class="bi bi-shop"></i> Create New Store</h2>
            <p>Set up a new store location for your business</p>
        </div>

        {{ form_start(form) }}
        
        <div class="form-section">
            <div class="form-section-title">
                <i class="bi bi-info-circle"></i>
                Store Information
            </div>
            
            <div class="form-row">
                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                    <div class="form-group">
                        {{ form_label(field) }}
                        {{ form_widget(field) }}
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            <a href="{{ path('owner.store.home') }}" class="btn-secondary">
                <i class="bi bi-arrow-left"></i>Cancel
            </a>
            <button type="submit" class="btn-primary">
                <i class="bi bi-plus-circle"></i>Create Store
            </button>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}