{% extends 'base.html.twig' %}
{% block title %}Create Category{% endblock %}
{% block page_title %}Create Category{% endblock %}
{% block body %}
<div class="content-area">
    <div class="modern-form">
        <div class="form-header">
            <h2><i class="bi bi-tags"></i> Create New Category</h2>
            <p>Organize your products by creating a new category</p>
        </div>

        {{ form_start(form) }}
        
        <div class="form-section">
            <div class="form-section-title">
                <i class="bi bi-info-circle"></i>
                Category Information
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.slug) }}
                    {{ form_widget(form.slug) }}
                    <small style="color: var(--text-secondary); font-size: 0.8rem; margin-top: 0.25rem;">URL-friendly version of the name</small>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a href="{{ path('owner.category.home') }}" class="btn-secondary">
                <i class="bi bi-arrow-left"></i>Cancel
            </a>
            <button type="submit" class="btn-primary">
                <i class="bi bi-plus-circle"></i>Create Category
            </button>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}