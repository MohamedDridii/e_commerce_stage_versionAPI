{% extends 'base.html.twig' %}
{% block title %}All Categories{% endblock %}
{% block page_title %}Category Management{% endblock %}
{% block body %}
<div class="modern-page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-info">
                <h1 class="page-title">
                    <i class="bi bi-tags me-2"></i>Category Management
                </h1>
                <p class="page-subtitle">Organize your products with categories</p>
            </div>
            <div class="header-actions">
                <a href="{{ path('owner.category.create') }}" class="modern-btn primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Category
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid mb-4">
        <div class="stat-card">
            <div class="stat-icon categories">
                <i class="bi bi-tags"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{ list|length }}</div>
                <div class="stat-label">Total Categories</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon products">
                <i class="bi bi-box"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">
                    {% set totalProducts = 0 %}
                    {% for category in list %}
                        {% set totalProducts = totalProducts + category.products|length %}
                    {% endfor %}
                    {{ totalProducts }}
                </div>
                <div class="stat-label">Products Categorized</div>
            </div>
        </div>
    </div>

    <!-- Categories Table -->
    <div class="modern-table-card">
        <div class="table-header">
            <h3 class="table-title">Categories Overview</h3>
            <div class="table-actions">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Search categories..." id="categorySearch">
                </div>
            </div>
        </div>
        <div class="table-container">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th class="sortable">Category</th>
                        <th class="sortable">Products Count</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in list %}
                    <tr class="table-row">
                        <td>
                            <div class="category-info">
                                <div class="category-icon">
                                    <i class="bi bi-tag"></i>
                                </div>
                                <div class="category-details">
                                    <div class="category-name">{{ category.name }}</div>
                                    <div class="category-description">
                                        {{ category.description|slice(0, 80) }}{% if category.description|length > 80 %}...{% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="product-count-badge">
                                <i class="bi bi-box me-1"></i>{{ category.products|length }} products
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="action-buttons">
                                <a href="{{ path('owner.category.edit', {id: category.id}) }}" 
                                   class="action-btn edit" title="Edit Category">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="{{ path('owner.category.delete', {id: category.id}) }}" 
                                   class="action-btn delete btn-delete" title="Delete Category">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3" class="empty-state">
                            <div class="empty-content">
                                <i class="bi bi-tags"></i>
                                <h4>No Categories Found</h4>
                                <p>Start organizing your products by creating categories</p>
                                <a href="{{ path('owner.category.create') }}" class="modern-btn primary">
                                    <i class="bi bi-plus-circle me-2"></i>Add Category
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const deleteLinks = document.querySelectorAll('.btn-delete');
  deleteLinks.forEach(function(link) {
    link.addEventListener('click', function(event) {
      if (!confirm('Are you sure you want to delete this category?\nThis action cannot be undone.')) {
        event.preventDefault();
      }
    });
  });
});
</script>
{% endblock %}